{
  "name": "tap-release-github-app",
  "version": "0.0.1",
  "description": "A GitHub app that automatically update Homebrew taps when you publish new GitHub releases",
  "author": "Tim Lucas (http://toolmantim.com)",
  "license": "ISC",
  "repository": "toolmantim/tap-release",
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY_BASE64 | base64 -d) npm start",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage",
    "simulate": "probot simulate release test/fixtures/release.json ./index.js",
    "postversion": "git push && git push --tags && npm publish && open \"$(node -e 'console.log(`${require(\"./package.json\").repository.replace(\".git\",\"\")}/releases`)')\" && npm run deploy",
    "deploy": "now && now alias"
  },
  "dependencies": {
    "compare-versions": "3.3.0",
    "probot": "7.0.0",
    "probot-config": "0.1.0",
    "request": "2.87.0"
  },
  "devDependencies": {
    "jest": "23.3.0",
    "nock": "9.4.1",
    "nodemon": "1.17.5",
    "smee-client": "1.0.2",
    "standard": "11.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js",
      "lib/**"
    ]
  }
}
